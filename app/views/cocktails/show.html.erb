
<div class="container">
  <h1>Welcome to <%= @cocktail.name %> Page</h1>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %> - <%= dose.description %>
        [<%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>]
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
</div>
